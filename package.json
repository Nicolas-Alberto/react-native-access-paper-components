{
  "name": "react-native-access-paper-components",
  "version": "0.1.2",
  "description": "Novos componentes para o react-native-paper",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest --config=jest.config.js --watchAll=false",
    "test-watch": "jest --config=jest.config.js --watchAll",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "husky install && bob build",
    "release": "release-it --ci --github.autoGenerate",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "prepack": "bob build",
    "build-example": "cd example && npx expo export:web"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nicolas-Alberto/react-native-access-paper-components.git"
  },
  "author": "Nicolas Alberto <nicolas.souza@accessbrasil.net.br> (https://github.com/Nicolas-Alberto)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Nicolas-Alberto/react-native-access-paper-components/issues"
  },
  "homepage": "https://github.com/Nicolas-Alberto/react-native-access-paper-components#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.7.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^11.5.4",
    "@types/color": "^3.0.4",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.21",
    "@types/react-native-vector-icons": "^6.4.14",
    "@types/react-test-renderer": "^18.0.1",
    "babel-loader": "^8.3.0",
    "caniuse-lite": "^1.0.30001534",
    "commitlint": "^17.7.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.76.8",
    "pod-install": "^0.1.39",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-native": "^0.72.4",
    "react-native-builder-bob": "^0.20.4",
    "react-native-paper": "^5.10.4",
    "react-native-safe-area-context": "^4.7.2",
    "react-native-vector-icons": "^9.2.0",
    "react-test-renderer": "^18.2.0",
    "release-it": "^15.10.5",
    "typescript": "^4.9.5"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-mask-input": "*",
    "react-native-paper": "*",
    "react-native-safe-area-context": "*",
    "react-native-vector-icons": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typecheck"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "semi": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "example/node_modules",
    "example/web-build",
    "docusaurus",
    "coverage"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "color": "^3.2.1"
  }
}
